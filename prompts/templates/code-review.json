{
  "id": "code-review",
  "name": "Code Review Template",
  "description": "Template for code review prompts",
  "template": "Please review the following {{language}} code:\n\n{{code}}\n\nFocus on: {{focus_areas}}",
  "variables": [
    {
      "name": "language",
      "type": "string",
      "description": "Programming language",
      "required": true
    },
    {
      "name": "code",
      "type": "string",
      "description": "Code to review",
      "required": true
    },
    {
      "name": "focus_areas",
      "type": "string",
      "description": "Areas to focus on during review",
      "required": false,
      "default": "security, performance, and maintainability"
    }
  ]
}
